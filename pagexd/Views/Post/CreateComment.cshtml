@model pagexd.ViewModels.PostWithCommentsVM

@using Microsoft.AspNetCore.Identity
@using pagexd.Data
@using pagexd.Models
@inject UserManager<PageUser> UserManager
<h1>Add funny comment @UserManager.GetUserId(User)</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Details" method="post" class="mt-3">
            <div class="form-group">
                <label asp-for="CommentVM.Txt" class="control-label"></label>
                <textarea asp-for="CommentVM.Txt" class="form-control"></textarea>
                <span asp-validation-for="CommentVM.Txt" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Add Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

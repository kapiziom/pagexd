@model IEnumerable<pagexd.ViewModels.PostVM>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="container">
    <div class="row">


        @foreach (var m in Model)
        {
            @if (m.IsAccepted == true)
            {
            <a href="@Url.Action("Details", "Post", new { id = @m.PostID })">
                <div class="content-title">
                    <h1 class="display-4">@m.Title</h1>
                    <img src="@Url.Content(m.Photo)" width="600" height="600" />
                    <h5>@m.CreationDate</h5>

                </div>
            </a>
            }
        }

    </div>
</div>